<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Disabled -->
    <item android:alpha="@dimen/material_emphasis_disabled" android:color="?attr/colorOnSurface" android:state_enabled="false" />

    <!-- Uncheckable -->
    <item android:color="?attr/colorPrimary" android:state_checkable="false"/>

    <!-- Checked Buttons. -->
    <item android:color="?attr/colorPrimary" android:state_checked="true"/>
    <item android:color="?attr/colorEmphasis_60" android:state_checked="false"/>

    <!-- Not-checked Buttons. -->
    <item android:color="?attr/colorPrimary" />
</selector>
